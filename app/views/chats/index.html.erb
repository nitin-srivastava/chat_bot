<div class="row text-white bg-success bg-gradient p-3">
  <div class="col-lg-3">
    <p class="fs-6 fw-bold mb-0">Conversations</p>
  </div>
  <div class="col-lg-9">Arpita Srivastava</div>
</div>
<div class="row min-vh-90">
  <div class="col-lg-3 px-0">
    <%= render 'chats/side_nav_bar' %>
  </div>
  <div class="col-lg-9 py-2 px-0" style="border: 1px solid green;">
    <div class="h-80 overflow-auto p-2" style="border-bottom: 1px solid green;">
      <div class="col-lg-12">
        <% Message.published.each do |message| %>
          <%= render_message(message) %>
        <% end %>
      </div>
    </div>
    <form class="row h-20 p-2">
      <div class="col-lg-10">
        <input type="text" class="form-control form-control-lg" placeholder="Type your message here...">
      </div>
      <div class="col-lg-2 py-1">
        <button type="submit" class="btn btn-success">Send</button>
      </div>
    </form>
  </div>
</div>
